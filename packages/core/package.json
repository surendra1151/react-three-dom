{
  "name": "@react-three-dom/core",
  "version": "0.2.0",
  "description": "DOM mirror, snapshot API, and interaction bridge for React Three Fiber",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "three": ">=0.150.0",
    "@react-three/fiber": ">=8.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "three": "^0.171",
    "@react-three/fiber": "^8",
    "@types/three": "^0.171",
    "react": "^18",
    "@types/react": "^18",
    "typescript": "^5.7",
    "tsup": "^8",
    "vitest": "^3"
  }
}
